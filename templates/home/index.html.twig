{% extends "base.html.twig" %}

{% block title %}
    Home
        
    
{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h1>
                    Hi, {{ app.user.username }} 
                </h1>
                <h2 class="text-muted">
                    Please use the navbar to see posts or create a new one
                </h2>
            </div>
        </div>
    {% else %}
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h1>
                    Hi, welcome to symfony forum
                </h1>
                <h2 class="text-muted">
                    Please use the navbar to login or register
                </h2>
            </div>
        </div>
    {% endif %}
{% endblock %}
